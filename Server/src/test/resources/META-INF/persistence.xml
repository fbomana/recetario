<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
  <persistence-unit name="persistencePUTest" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>es.ait.recetario.model.Recipe</class>
    <class>es.ait.recetario.model.Tag</class>
    <properties>
      <property name="eclipselink.target-database" value="MYSQL"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/recetario"/>
      <property name="javax.persistence.jdbc.user" value="recetario"/>
      <property name="javax.persistence.jdbc.password" value="recetario"/>
      <property name="eclipselink.ddl-generation" value="none"/>
      <property name="eclipselink.logging.level" value="INFO"/>
    </properties>
  </persistence-unit>
</persistence>
